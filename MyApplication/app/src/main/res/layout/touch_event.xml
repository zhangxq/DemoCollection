<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="vertical">

        <com.zhangxq.democollection.toucheventdemo.TouchEventFather
            android:id="@+id/viewFather"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ff468AD7"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhangxq.democollection.toucheventdemo.TouchEventChilds
                android:id="@+id/viewChild"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="#ffff5500"
                android:clickable="true" />

        </com.zhangxq.democollection.toucheventdemo.TouchEventFather>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/buttonRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="红色可点" />

            <Button
                android:id="@+id/buttonBlue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="蓝色可点" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="clear"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#ffff5500"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupChildDispatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="dispatch:"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="true"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:id="@+id/radioButtonChildDispatchDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="default"
                    android:textColor="#ffffffff" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffdcdcdc" />

            <RadioGroup
                android:id="@+id/radioGroupChildOnTouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="ontouch:"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="true"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:id="@+id/radioButtonChildOntouchDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="default"
                    android:textColor="#ffffffff" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff468AD7"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupFatherDispatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="dispatch:"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="true"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:id="@+id/radioButtonFatherDispatchDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="default"
                    android:textColor="#ffffffff" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffdcdcdc" />

            <RadioGroup
                android:id="@+id/radioGroupFatherOnTouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="ontouch:"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="true"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="false"
                    android:textColor="#ffffffff" />

                <RadioButton
                    android:id="@+id/radioButtonFatherOntouchDefault"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="default"
                    android:textColor="#ffffffff" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

